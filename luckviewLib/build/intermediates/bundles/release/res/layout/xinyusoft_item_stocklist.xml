<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/luckview_stocklist_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/luckview_title_rl"
    android:orientation="horizontal"
    android:padding="10dp" >

    <TextView
        android:id="@+id/luckview_stocklist_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:gravity="center"
        android:textColor="#777777"
        android:text="序号"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/luckview_stocklist_stock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="全部股票"
        android:textColor="#141517"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/luckview_stocklist_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="代码"
        android:textColor="#777777"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/luckview_stocklist_zdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="涨跌幅"
        android:textColor="#F63D46"
        android:textSize="14sp" />

</LinearLayout>