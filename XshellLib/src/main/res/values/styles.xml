<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <!-- xinyusoft  start -->
    <style name="Theme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/xinyusoft_activity_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/xinyusoft_activity_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/xinyusoft_activity_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/xinyusoft_activity_right_out</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>


    <style name="mystyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/xinyusoft_dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/xinyusoft_dialog_exit</item>
    </style>

    <style name="ButtonGreen" parent="@android:style/Widget.Button">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@drawable/xinyusoft_skin_color_button</item>
        <item name="android:background">@drawable/xinyusoft_common_btn_green</item>
    </style>

    <style name="ButtonRed" parent="@android:style/Widget.Button">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@drawable/xinyusoft_skin_color_button</item>
        <item name="android:background">@drawable/xinyusoft_common_btn_red</item>
    </style>
    <!-- xinyusoft  end -->

</resources>